        /**
         * Check if the current user is viewing their own profile
         * Shows/hides the edit button accordingly
         */
        async function checkIfOwnProfile() {
            const currentProfileUsername = '<%= username %>';
            const editBtn = document.getElementById('edit-username-btn');
            
            try {
                const response = await fetch('/api/me', {
                    credentials: 'include' // Include cookies for authentication
                });
                
                if (response.ok) {
                    const userData = await response.json();
                    // If the logged-in user's username matches the profile username, show edit button
                    if (userData.username === currentProfileUsername) {
                        editBtn.classList.remove('hidden');
                    } else {
                        editBtn.classList.add('hidden');
                    }
                } else {
                    // User is not logged in, hide edit button
                    editBtn.classList.add('hidden');
                }
            } catch (error) {
                console.error('Error checking user profile:', error);
                // On error, hide the button for safety
                editBtn.classList.add('hidden');
            }
        }
        
