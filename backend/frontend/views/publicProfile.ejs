    <!-- QR Code Modal -->
    <div id="qr-modal" class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 hidden flex items-center justify-center transition-opacity duration-300" onclick="closeQRModal(event)">
        <div class="bg-gray-900 dark:bg-white rounded-2xl shadow-2xl p-8 max-w-sm w-full mx-4 transform transition-all duration-300 scale-95" onclick="event.stopPropagation()" id="qr-modal-content">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-white dark:text-gray-800">Profile QR Code</h2>
                <button onclick="closeQRModal(event)" class="text-gray-400 dark:text-gray-500 hover:text-gray-200 dark:hover:text-gray-700 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="text-center">
                <div id="qr-code-container" class="bg-gray-800 dark:bg-gray-100 p-4 rounded-lg mb-4 flex justify-center">
                    <img id="qr-code-image" src="" alt="QR Code" class="max-w-full h-auto">
                </div>
                <p class="text-sm text-gray-400 dark:text-gray-600 mb-4">Scan to visit this profile</p>
                <button 
                    onclick="downloadQRCode()" 
                    class="w-full bg-custom-green text-white py-3 px-6 rounded-lg hover:bg-green-600 transition-all duration-200 font-semibold flex items-center justify-center gap-2"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                    Download QR Code
                </button>
            </div>
        </div>
    </div>
    
    <!-- QR Code Data -->
    <script id="qr-code-data" type="application/json"><%- JSON.stringify({ qrCodeUrl: (profileData && profileData.qrCodeUrl) ? profileData.qrCodeUrl : null }) %></script>
    
    <script>
        // Store profile data and QR code URL from data attribute
        const qrDataElement = document.getElementById('qr-code-data');
        const qrData = qrDataElement ? JSON.parse(qrDataElement.textContent) : { qrCodeUrl: null };
        let profileQRCodeUrl = qrData.qrCodeUrl;
        const profileUrl = window.location.href;
        
        // Debug: Log QR code URL status
        console.log('Initial QR code URL status:', profileQRCodeUrl ? 'Present' : 'Not available');
        if (profileQRCodeUrl) {
            console.log('QR code URL length:', profileQRCodeUrl.length);
            console.log('QR code URL starts with:', profileQRCodeUrl.substring(0, 30));
        }
        
        /**
         * Open the Share modal with smooth animation
         */
        function openShareModal() {
            const modal = document.getElementById('share-modal');
            const modalContent = document.getElementById('share-modal-content');
            modal.classList.remove('hidden');
            // Trigger animation
                    setTimeout(() => {
                modal.classList.remove('opacity-0');
                modalContent.classList.remove('scale-95');
                modalContent.classList.add('scale-100');
            }, 10);
        }
        
        /**
         * Close the Share modal with smooth animation
         */
        function closeShareModal(event) {
            if (event) {
                event.stopPropagation();
            }
            const modal = document.getElementById('share-modal');
            const modalContent = document.getElementById('share-modal-content');
            modalContent.classList.remove('scale-100');
            modalContent.classList.add('scale-95');
                    setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }
        
        /**
         * Close the QR Code modal with smooth animation
         */
        function closeQRModal(event) {
            if (event) {
                event.stopPropagation();
            }
            const modal = document.getElementById('qr-modal');
            const modalContent = document.getElementById('qr-modal-content');
            modalContent.classList.remove('scale-100');
            modalContent.classList.add('scale-95');
            setTimeout(() => {
                modal.classList.add('hidden');
            }, 300);
        }
        
        /**
         * Copy profile link to clipboard
         */
        function shareCopyLink() {
            navigator.clipboard.writeText(profileUrl).then(function() {
                closeShareModal();
                showToast('Profile link copied!', 'success');
            }).catch(function(err) {
                console.error('Could not copy text: ', err);
                showToast('Failed to copy profile link', 'error');
            });
        }
        
        /**
         * Show QR Code modal
         * Fetches and displays the QR code for the profile
         */
        async function showQRCode() {
            // Close share modal first
            closeShareModal();
            
            // Show loading state
            const qrImage = document.getElementById('qr-code-image');
            const qrModal = document.getElementById('qr-modal');
            const qrModalContent = document.getElementById('qr-modal-content');
            
            // Show modal with loading
            qrImage.src = '';
            qrImage.alt = 'Loading QR code...';
            qrModal.classList.remove('hidden');
            setTimeout(() => {
                qrModal.classList.remove('opacity-0');
                qrModalContent.classList.remove('scale-95');
                qrModalContent.classList.add('scale-100');
            }, 10);
            
            // Always fetch from API to ensure we have the latest QR code
            // This also triggers generation if it doesn't exist
            try {
                console.log('Fetching QR code from API for user:', '<%= username %>');
                const response = await fetch(`/api/profile/<%= username %>`);
                
                if (response.ok) {
                    const data = await response.json();
                    console.log('Profile API response received');
                    console.log('Full response data:', data);
                    console.log('Response keys:', Object.keys(data));
                    console.log('qrCodeUrl in response:', data.qrCodeUrl ? 'Present' : 'Missing or null');
                    console.log('qrCodeUrl type:', typeof data.qrCodeUrl);
                    console.log('qrCodeUrl value:', data.qrCodeUrl ? (data.qrCodeUrl.substring(0, 50) + '...') : data.qrCodeUrl);
                    
                    // Check for QR code in response
                    if (data.qrCodeUrl && data.qrCodeUrl.trim() !== '') {
                        profileQRCodeUrl = data.qrCodeUrl;
                        console.log('QR code URL found, length:', profileQRCodeUrl.length);
                        console.log('QR code URL starts with:', profileQRCodeUrl.substring(0, 50));
                        
                        // Validate it's a data URL
                        if (profileQRCodeUrl.startsWith('data:image')) {
                            // Set the QR code image
                            qrImage.src = profileQRCodeUrl;
                            qrImage.alt = 'Profile QR Code';
                            
                            qrImage.onload = function() {
                                console.log('QR code image loaded successfully');
                            };
                            
                            qrImage.onerror = function() {
                                console.error('Failed to load QR code image - invalid data URL');
                                showToast('Failed to load QR code image. Please try again.', 'error');
                                setTimeout(() => closeQRModal(), 2000);
                            };
                        } else {
                            console.error('QR code URL is not a valid data URL:', profileQRCodeUrl.substring(0, 50));
                            showToast('Invalid QR code format. Please refresh the page.', 'error');
                            setTimeout(() => closeQRModal(), 2000);
                        }
                    } else {
                        console.error('QR code not found in API response');
                        console.error('Response data:', data);
                        showToast('QR code not generated yet. Please refresh the page and try again.', 'error');
                        setTimeout(() => closeQRModal(), 2000);
                    }
                } else {
                    const errorText = await response.text();
                    console.error('Failed to fetch profile:', response.status, errorText);
                    showToast(`Failed to load profile data (${response.status}). Please try again.`, 'error');
                    setTimeout(() => closeQRModal(), 2000);
                }
            } catch (error) {
                console.error('Error fetching QR code:', error);
                console.error('Error details:', error.message, error.stack);
                showToast('Network error. Please check your connection and try again.', 'error');
                setTimeout(() => closeQRModal(), 2000);
            }
        }
        
        /**
         * Share profile on WhatsApp
         */
        function shareOnWhatsApp() {
            const encodedUrl = encodeURIComponent(profileUrl);
            const whatsappUrl = `https://api.whatsapp.com/send?text=Check%20out%20my%20LinkIt%20profile%20${encodedUrl}`;
            window.open(whatsappUrl, '_blank', 'noopener,noreferrer');
            closeShareModal();
        }
        
        /**
         * Share profile on Instagram
         */
        function shareOnInstagram() {
            closeShareModal();
            alert('Open Instagram to share manually. Copy the profile link first!');
            // Optionally copy the link automatically
            navigator.clipboard.writeText(profileUrl).then(() => {
                showToast('Profile link copied! Paste it in Instagram', 'success');
            });
        }
        
        /**
         * Download QR code as PNG image
         * Converts the data URL to a downloadable file
         */
        function downloadQRCode() {
            const qrImage = document.getElementById('qr-code-image');
            const qrCodeUrl = qrImage.src;
            
            // Check if QR code is loaded
            if (!qrCodeUrl || qrCodeUrl === '') {
                showToast('QR code not loaded yet. Please try again.', 'error');
                return;
            }
            
            try {
                // Create a temporary anchor element
                const link = document.createElement('a');
                link.href = qrCodeUrl;
                
                // Set filename with username
                const username = '<%= username %>';
