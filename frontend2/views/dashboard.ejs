<!DOCTYPE html>
<html lang="en" class="<%= isDarkMode ? 'dark' : '' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Linkit</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/images/newLogo.png?v=1">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/newLogo.png?v=1">
    <link rel="shortcut icon" href="/images/newLogo.png?v=1">
    <link rel="apple-touch-icon" href="/images/newLogo.png?v=1">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Custom Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-green': '#4caf50',
                        'custom-grey-color': 'rgba(39, 39, 39, 0.8)',
                        'buttons-primary': '#4caf50'
                    }
                }
            }
        }
    </script>
    
    <!-- Particles.js -->
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@3.0.0/tsparticles.bundle.min.js"></script>
</head>
<body class="<%= isDarkMode ? 'bg-black text-white' : 'bg-white text-black' %>">
    <div class="relative min-h-screen">
        <!-- Particles Background -->
        <div id="particles-js" class="absolute inset-0"></div>
        
        <!-- Header -->
        <header class="fixed py-3 top-0 left-0 right-0 z-50 w-full <%= isDarkMode ? 'bg-black text-white' : 'bg-white text-black' %> backdrop-blur-md shadow-md">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
                <!-- Logo -->
                <%- include('partials/linkitLogo') %>
                
                <!-- Right Buttons -->
                <div class="flex items-center gap-4">
                    <%- include('partials/darkButton') %>
                    <a href="/profile/<%= user ? user.username : '' %>" class="px-4 py-2 border-2 border-custom-green text-buttons-primary rounded-md hover:text-custom-green transition-all">
                        Public Profile
                    </a>
                    <button onclick="logout()" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                        Logout
                    </button>
                </div>
            </div>
        </header>
        
        <!-- Main Content -->
        <div id="dashboard-main-content" class="relative z-10 flex items-center justify-center px-4 sm:px-10 py-4 sm:py-8 bg-transparent text-black" style="padding-top: 6rem; min-height: calc(100vh - 6rem);">
            
            <!-- Dashboard Content -->
            <div id="dashboard-card" class="w-full max-w-5xl flex flex-col items-center p-10 rounded-lg shadow-lg bg-white text-black bg-opacity-50 backdrop-blur-md">
                <h1 class="text-xl sm:text-2xl font-bold mb-4 text-center">
                    Welcome ðŸ‘‹, <%= user ? user.username : 'User' %>!
                </h1>

                <!-- Profile Section -->
                <div class="mb-8 flex flex-wrap justify-between items-start w-full max-w-4xl gap-4">
                    <!-- Profile Image -->
                    <div class="w-full sm:w-auto text-center sm:text-left">
                        <h2 class="text-lg sm:text-xl font-semibold mb-4">Your Profile</h2>
                        <div class="flex flex-col sm:flex-row items-center gap-6">
                            <img 
                                src="<%= user && user.profileImage ? user.profileImage : '/images/default.svg' %>" 
                                alt="Profile" 
                                class="w-20 h-20 rounded-full object-cover"
                                id="profile-image"
                            />
                            <div class="text-center sm:text-left">
                                <label class="block px-4 py-2 border border-green-500 text-green-500 rounded cursor-pointer hover:bg-custom-green hover:text-white">
                                    update image
                                    <input type="file" id="profile-image-input" accept="image/*" class="hidden" onchange="handleImageChange(event)">
                                </label>
                                <button 
                                    id="update-image-btn"
                                    onclick="updateProfileImage()" 
                                    disabled
                                    class="mt-2 px-4 py-2 bg-gray-400 cursor-not-allowed text-white rounded hidden"
                                >
                                    Update Image
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Clicks -->
                    <div class="w-full sm:w-auto p-4 rounded shadow text-center sm:text-left">
                        <h3 class="text-lg sm:text-xl font-semibold mb-2">Profile Clicks</h3>
                        <p class="text-3xl sm:text-4xl font-bold text-green-500" id="profile-clicks">
                            <%= user ? (user.profileClicks || 0) : 0 %>
                        </p>
                    </div>
                </div>

                <!-- Links Section -->
                <div class="w-full max-w-4xl">
                    <h2 class="text-lg sm:text-xl font-semibold mb-4 text-center sm:text-left">Your Links</h2>

                    <!-- Add/Update Link Form -->
                    <form id="link-form" class="mb-6 flex flex-col sm:flex-row gap-4">
                        <input 
                            type="text" 
                            id="link-title"
                            placeholder="Title" 
                            required
                            class="flex-1 px-4 py-2 border rounded text-black"
                        />
                        <input 
                            type="url" 
                            id="link-url"
                            placeholder="Link" 
                            required
                            class="flex-1 px-4 py-2 border rounded text-black"
                        />
                        <button 
                            type="submit" 
                            id="submit-btn"
                            class="px-6 py-2 bg-custom-green text-white rounded hover:bg-green-600"
                        >
                            Add Link
                        </button>
                        <button 
                            type="button" 
                            id="cancel-btn"
                            onclick="cancelEdit()"
                            class="px-6 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 hidden"
                        >
                            Cancel
                        </button>
                    </form>

                    <!-- Display Links -->
                    <div id="links-container" class="flex flex-col gap-4 p-4 border border-custom-green rounded sm:p-8 overflow-y-auto max-h-[400px]">
                        <% if (links && links.length > 0) { %>
                            <% links.forEach(function(link) { %>
                                <div class="flex flex-col sm:flex-row justify-between items-center p-4 rounded shadow <%= isDarkMode ? 'bg-gray-800 text-white' : 'bg-gray-100' %>" data-link-id="<%= link._id %>">
                                    <div class="w-full text-center sm:text-left">
                                        <strong><%= link.title %></strong>: 
                                        <a href="<%= link.link %>" target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:underline">
                                            <%= link.link %>
                                        </a>
                                        <br>
                                        <small class="text-gray-500">Clicks: <%= link.clicks || 0 %></small>
                                    </div>
                                    <div class="flex gap-2 mt-4 sm:mt-0">
                                        <button onclick="editLink('<%= link._id %>', '<%= link.title %>', '<%= link.link %>')" class="px-4 py-2 bg-custom-green text-white rounded hover:bg-green-600">
                                            Edit
                                        </button>
                                        <button onclick="deleteLink('<%= link._id %>')" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
                                            Delete
                                        </button>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <p class="text-center text-gray-500">No links yet. Add your first link above!</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        let editingLinkId = null;
        let selectedImage = null;
        
        // Initialize particles
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof tsParticles !== 'undefined') {
                tsParticles.load("particles-js", {
                    particles: {
                        number: { value: 80 },
                        color: { value: "#4caf50" },
                        shape: { type: "circle" },
                        opacity: { value: 0.5 },
                        size: { value: 3 },
                        line_linked: { enable: true, distance: 150, color: "#4caf50", opacity: 0.4, width: 1 },
                        move: { enable: true, speed: 2, direction: "none", random: false, straight: false, out_mode: "out", bounce: false }
                    },
                    interactivity: {
                        detect_on: "canvas",
                        events: { onhover: { enable: true, mode: "repulse" }, onclick: { enable: true, mode: "push" }, resize: true },
                        modes: { grab: { distance: 400, line_linked: { opacity: 1 } }, bubble: { distance: 400, size: 40, duration: 2, opacity: 8, speed: 3 }, repulse: { distance: 200, duration: 0.4 }, push: { particles_nb: 4 }, remove: { particles_nb: 2 } }
                    },
                    retina_detect: true
                });
            }
        });
        
        // Handle image change
        function handleImageChange(event) {
            const file = event.target.files[0];
            if (file) {
                selectedImage = file;
                const updateBtn = document.getElementById('update-image-btn');
                updateBtn.disabled = false;
                updateBtn.classList.remove('bg-gray-400', 'cursor-not-allowed');
                updateBtn.classList.add('bg-green-500', 'hover:bg-green-600');
                updateBtn.classList.remove('hidden');
                updateBtn.textContent = 'Update Image';
            }
        }
        
        // Update profile image
        async function updateProfileImage() {
            if (!selectedImage) return;
            
            const formData = new FormData();
            formData.append('profileImage', selectedImage);
            
            const updateBtn = document.getElementById('update-image-btn');
            updateBtn.disabled = true;
            updateBtn.textContent = 'Updating...';
            
            try {
                // Debug: Log the token and request details
                const token = localStorage.getItem('token');
                console.log('Token exists:', !!token);
                console.log('Token length:', token ? token.length : 0);
                console.log('Selected image:', selectedImage.name, selectedImage.size, 'bytes');
                
                const response = await fetch('/api/users/update-profile-image', {
                    method: 'PUT',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    },
                    body: formData
                });
                
                console.log('Response status:', response.status);
                console.log('Response headers:', response.headers);
                
                const data = await response.json();
                
                if (response.ok) {
                    // Success: Update the profile image display
                    document.getElementById('profile-image').src = data.profileImage;
                    selectedImage = null;
                    document.getElementById('profile-image-input').value = '';
                    updateBtn.classList.add('hidden');
                    
                    // Show success message
                    showNotification('Profile image updated successfully!', 'success');
                } else {
                    // Error: Show specific error message
                    const errorMessage = data.message || 'Failed to update profile image';
                    showNotification(errorMessage, 'error');
                    console.error('Profile image update failed:', data);
                }
            } catch (error) {
                console.error('Error updating profile image:', error);
                showNotification('Network error. Please check your connection and try again.', 'error');
            } finally {
                // Reset button state
                updateBtn.disabled = false;
                updateBtn.textContent = 'Update Image';
            }
        }
        
        // Show notification function
        function showNotification(message, type = 'info') {
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 ${
                type === 'success' ? 'bg-green-500 text-white' : 
                type === 'error' ? 'bg-red-500 text-white' : 
                'bg-blue-500 text-white'
            }`;
            notification.textContent = message;
            
            // Add to page
            document.body.appendChild(notification);
            
            // Remove after 3 seconds
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
        
        // Handle link form submission
        document.getElementById('link-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const title = document.getElementById('link-title').value;
            const url = document.getElementById('link-url').value;
            const submitBtn = document.getElementById('submit-btn');
            
            if (editingLinkId) {
                // Update existing link
                try {
                    const response = await fetch('/api/links/' + editingLinkId, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + localStorage.getItem('token')
                        },
                        body: JSON.stringify({ title, link: url })
                    });
                    
                    if (response.ok) {
                        location.reload(); // Refresh to show updated data
                    } else {
                        alert('Failed to update link');
                    }
                } catch (error) {
                    console.error('Error updating link:', error);
                    alert('Error updating link');
                }
            } else {
                // Create new link
                try {
                    const response = await fetch('/api/links', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': 'Bearer ' + localStorage.getItem('token')
                        },
                        body: JSON.stringify({ title, link: url })
                    });
                    
                    if (response.ok) {
                        location.reload(); // Refresh to show new link
                    } else {
                        alert('Failed to create link');
                    }
                } catch (error) {
                    console.error('Error creating link:', error);
                    alert('Error creating link');
                }
            }
        });
        
        // Edit link
        function editLink(id, title, url) {
            editingLinkId = id;
            document.getElementById('link-title').value = title;
            document.getElementById('link-url').value = url;
            document.getElementById('submit-btn').textContent = 'Update Link';
            document.getElementById('cancel-btn').classList.remove('hidden');
        }
        
        // Cancel edit
        function cancelEdit() {
            editingLinkId = null;
            document.getElementById('link-title').value = '';
            document.getElementById('link-url').value = '';
            document.getElementById('submit-btn').textContent = 'Add Link';
            document.getElementById('cancel-btn').classList.add('hidden');
        }
        
        // Delete link
        async function deleteLink(id) {
            if (!confirm('Are you sure you want to delete this link?')) return;
            
            try {
                const response = await fetch('/api/links/' + id, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    }
                });
                
                if (response.ok) {
                    location.reload(); // Refresh to show updated data
                } else {
                    alert('Failed to delete link');
                }
            } catch (error) {
                console.error('Error deleting link:', error);
                alert('Error deleting link');
            }
        }
        
        // Logout function
        async function logout() {
            try {
                // Call logout API endpoint to clear server-side session
                const response = await fetch('/logout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                if (response.ok) {
                    console.log('Logged out successfully');
                } else {
                    console.error('Logout failed');
                }
            } catch (error) {
                console.error('Error during logout:', error);
            } finally {
                // Always clear client-side token and redirect
                localStorage.removeItem('token');
                window.location.href = '/login';
            }
        }
    </script>
    
    <!-- Scripts -->
    <script src="/js/main.js"></script>
</body>
</html>