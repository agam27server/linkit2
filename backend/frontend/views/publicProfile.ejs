        /**
         * Save the new username
         */
        async function saveUsername() {
            const usernameInput = document.getElementById('username-input');
            const usernameMessage = document.getElementById('username-message');
            const saveBtn = document.getElementById('save-username-btn');
            const cancelBtn = document.getElementById('cancel-username-btn');
            
            const newUsername = usernameInput.value.trim();
            
            // Clear previous messages
            usernameMessage.textContent = '';
            usernameMessage.className = 'mt-2 text-sm';
            
            // Validate username
            if (!newUsername) {
                usernameMessage.textContent = 'Username cannot be empty';
                usernameMessage.className = 'mt-2 text-sm text-red-600';
                return;
            }
            
            if (newUsername.length < 3 || newUsername.length > 20) {
                usernameMessage.textContent = 'Username must be between 3 and 20 characters';
                usernameMessage.className = 'mt-2 text-sm text-red-600';
                return;
            }
            
            // Validate username format (only letters, numbers, and underscores)
            if (!/^[a-zA-Z0-9_]+$/.test(newUsername)) {
                usernameMessage.textContent = 'Username can only contain letters, numbers, and underscores';
                usernameMessage.className = 'mt-2 text-sm text-red-600';
                return;
            }
            
            // Disable buttons during request
            saveBtn.disabled = true;
            cancelBtn.disabled = true;
            saveBtn.textContent = 'Saving...';
            
            try {
                console.log('Attempting to update username to:', newUsername);
                const response = await fetch('/api/users/update-username', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include', // Include cookies for authentication
                    body: JSON.stringify({ username: newUsername })
                });
                
                console.log('Response status:', response.status);
                console.log('Response statusText:', response.statusText);
                console.log('Response headers:', Object.fromEntries(response.headers.entries()));
                
                // Safely parse response JSON
                let data = {};
                try {
                    const contentType = response.headers.get('content-type');
                    console.log('Content-Type:', contentType);
                    if (contentType && contentType.includes('application/json')) {
                        data = await response.json();
                        console.log('Response data:', data);
                    } else if (contentType && contentType.includes('text/html')) {
                        // If we get HTML (like 404 page), it means route not found
                        const text = await response.text();
                        console.log('Got HTML response (likely 404):', text.substring(0, 200));
                        data = { message: 'Route not found. The API endpoint may not be configured correctly.' };
                    } else {
                        // If response is not JSON, try to get text
                        const text = await response.text();
                        console.log('Response text:', text);
                        data = { message: text || 'Failed to update username' };
                    }
                } catch (parseError) {
                    console.error('Error parsing response:', parseError);
                    data = { message: 'Invalid response from server' };
                }
                
                if (response.ok) {
                    // Update the displayed username
                    document.getElementById('username-text').textContent = newUsername;
                    
                    // Show success message
                    usernameMessage.textContent = data.message || 'Username updated successfully!';
                    usernameMessage.className = 'mt-2 text-sm text-green-600';
                    
                    // Update URL if on own profile
                    const currentPath = window.location.pathname;
                    const newPath = currentPath.replace(/\/profile\/[^/]+/, `/profile/${newUsername}`);
                    window.history.replaceState(null, '', newPath);
                    
                    // Return to display mode after a short delay
                    setTimeout(() => {
                        cancelUsernameEdit();
                        // Reload the page to ensure everything is in sync
                        window.location.reload();
                    }, 1500);
                } else {
                    // Show error message with more details
                    let errorMessage = 'Failed to update username';
                    
                    // Log full error details for debugging
                    console.error('Update username failed:', {
                        status: response.status,
                        statusText: response.statusText,
                        data: data
                    });
                    
                    if (data && data.message) {
                        errorMessage = data.message;
                    } else if (response.status === 401) {
                        errorMessage = 'You must be logged in to update your username. Please log in and try again.';
                    } else if (response.status === 403) {
                        errorMessage = 'You do not have permission to update this username';
                    } else if (response.status === 404) {
                        errorMessage = 'User not found or route not found';
                    } else if (response.status === 500) {
                        errorMessage = 'Server error. Please try again later';
                    } else if (response.status === 400) {
                        errorMessage = data.message || 'Invalid username. Please check the requirements and try again.';
                    }
                    
                    usernameMessage.textContent = errorMessage;
                    usernameMessage.className = 'mt-2 text-sm text-red-600';
                }
            } catch (error) {
                console.error('Error updating username:', error);
                let errorMessage = 'An error occurred while updating username';
                
                // Provide more specific error messages
                if (error.message.includes('fetch')) {
                    errorMessage = 'Network error. Please check your connection and try again';
                } else if (error.message) {
                    errorMessage = `Error: ${error.message}`;
                }
                
                usernameMessage.textContent = errorMessage;
                usernameMessage.className = 'mt-2 text-sm text-red-600';
            } finally {
                // Re-enable buttons
                saveBtn.disabled = false;
                cancelBtn.disabled = false;
                saveBtn.textContent = 'Save';
            }
        }
        
