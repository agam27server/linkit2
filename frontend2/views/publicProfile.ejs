<!DOCTYPE html>
<html lang="en" class="<%= isDarkMode ? 'dark' : '' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Linkit</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/images/newLogo.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/newLogo.png">
    <link rel="shortcut icon" href="/images/newLogo.png">
    <link rel="apple-touch-icon" href="/images/newLogo.png">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Custom Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'custom-green': '#4caf50',
                        'custom-grey-color': 'rgba(39, 39, 39, 0.8)',
                        'buttons-primary': '#4caf50'
                    }
                }
            }
        }
    </script>
    
    <!-- Particles.js -->
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@3.0.0/tsparticles.bundle.min.js"></script>
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
</head>
<body id="public-profile-body" class="bg-gray-100 text-black">
    <div class="relative min-h-screen flex flex-col items-center">
        <!-- Particles Background -->
        <div id="particles-js" class="absolute inset-0"></div>
        
        <!-- Header Section -->
        <header class="w-full flex justify-between px-10 py-4 z-10" data-aos="fade-down">
            <%- include('partials/linkitLogo') %>
            <div class="flex gap-4 items-center">
                <%- include('partials/darkButton') %>
                <button id="copy-profile-button" onclick="copyProfileLink()" class="w-14 h-14 rounded-full bg-custom-green text-white hover:bg-green-600 transition-all flex items-center justify-center">
                    <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                </button>
            </div>
        </header>
        
        <!-- Profile Section -->
        <div class="text-center mb-8 z-10" data-aos="fade-up">
                <div id="profile-image-container" class="w-40 h-40 rounded-full overflow-hidden mx-auto mb-4 border-4 bg-gray-100 text-black border-custom-grey-color" data-aos="zoom-in" data-aos-delay="300">
                <img 
                    src="<%= profileData && profileData.profileImage ? profileData.profileImage : '/images/default.svg' %>" 
                    alt="<%= username %>'s profile" 
                    class="w-full h-full object-cover"
                />
            </div>
            <h1 class="text-3xl font-bold" data-aos="fade-up" data-aos-delay="400">
                <span class="text-custom-green">@</span><%= username %>
            </h1>
        </div>
        
        <!-- Links Section -->
        <div class="w-full max-w-md z-10 rounded-lg p-4" data-aos="fade-up">
            <div id="links-container">
                <% if (profileData && profileData.links && profileData.links.length > 0) { %>
                    <% profileData.links.forEach(function(link) { %>
                        <div 
                            onclick="window.open('<%= link.link %>', '_blank', 'noopener,noreferrer')"
                            class="block bg-custom-green text-white hover:bg-custom-grey-color text-center text-lg font-medium py-4 mb-4 rounded-lg transition cursor-pointer"
                        >
                            <%= link.title %>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-12">
                        <div class="w-24 h-24 mx-auto mb-4 text-gray-400">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">No Links Yet</h3>
                        <p class="text-gray-600">
                            This user hasn't added any links yet.
                        </p>
                    </div>
                <% } %>
            </div>
        </div>
        
        <!-- Footer Section -->
        <footer class="mt-12 text-sm z-10">
            <p>&copy; <%= new Date().getFullYear() %> Created with Linkit</p>
        </footer>
    </div>
    
    <script>
        // Copy profile link to clipboard
        function copyProfileLink() {
            const profileUrl = window.location.href;
            navigator.clipboard.writeText(profileUrl).then(function() {
                // Get the copy button element
                const copyButton = document.getElementById('copy-profile-button');
                
                // Create success message
                const toast = document.createElement('div');
                toast.className = 'absolute top-full left-1/2 transform -translate-x-1/2 mt-2 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50 whitespace-nowrap';
                toast.textContent = 'Profile link copied!';
                
                // Position the toast relative to the copy button
                if (copyButton) {
                    copyButton.style.position = 'relative';
                    copyButton.appendChild(toast);
                    
                    // Remove the toast after 2 seconds
                    setTimeout(() => {
                        if (toast.parentNode) {
                            toast.parentNode.removeChild(toast);
                        }
                    }, 2000);
                } else {
                    // Fallback to fixed position if button not found
                    toast.className = 'fixed top-4 right-4 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50';
                    document.body.appendChild(toast);
                    setTimeout(() => {
                        if (toast.parentNode) {
                            toast.parentNode.removeChild(toast);
                        }
                    }, 2000);
                }
            }).catch(function(err) {
                console.error('Could not copy text: ', err);
                alert('Failed to copy profile link');
            });
        }
        
        // Initialize particles
        function initParticles() {
            if (window.tsParticles) {
                window.tsParticles.load("particles-js", {
                    particles: {
                        number: {
                            value: 80,
                            density: {
                                enable: true,
                                value_area: 800
                            }
                        },
                        color: {
                            value: "#4caf50"
                        },
                        shape: {
                            type: "circle"
                        },
                        opacity: {
                            value: 0.5,
                            random: false,
                            anim: {
                                enable: false,
                                speed: 1,
                                opacity_min: 0.1,
                                sync: false
                            }
                        },
                        size: {
                            value: 3,
                            random: true,
                            anim: {
                                enable: false,
                                speed: 40,
                                size_min: 0.1,
                                sync: false
                            }
                        },
                        line_linked: {
                            enable: true,
                            distance: 150,
                            color: "#4caf50",
                            opacity: 0.4,
                            width: 1
                        },
                        move: {
                            enable: true,
                            speed: 6,
                            direction: "none",
                            random: false,
                            straight: false,
                            out_mode: "out",
                            bounce: false,
                            attract: {
                                enable: false,
                                rotateX: 600,
                                rotateY: 1200
                            }
                        }
                    },
                    interactivity: {
                        detect_on: "canvas",
                        events: {
                            onhover: {
                                enable: true,
                                mode: "repulse"
                            },
                            onclick: {
                                enable: true,
                                mode: "push"
                            },
                            resize: true
                        },
                        modes: {
                            grab: {
                                distance: 400,
                                line_linked: {
                                    opacity: 1
                                }
                            },
                            bubble: {
                                distance: 400,
                                size: 40,
                                duration: 2,
                                opacity: 8,
                                speed: 3
                            },
                            repulse: {
                                distance: 200,
                                duration: 0.4
                            },
                            push: {
                                particles_nb: 4
                            },
                            remove: {
                                particles_nb: 2
                            }
                        }
                    },
                    retina_detect: true
                });
            }
        }
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', async function() {
            // Initialize AOS
            AOS.init({
                duration: 500,
                easing: "ease-in-out",
                once: false,
            });
            
            // Initialize particles
            initParticles();
            
            // Load profile data if not already loaded
            try {
                const response = await fetch('/api/profile/<%= username %>');
                if (response.ok) {
                    const data = await response.json();
                    // Update the page with the loaded data
                    updateProfileData(data);
                } else {
                    document.getElementById('links-container').innerHTML = 
                        '<div class="text-center py-12"><h3 class="text-xl font-semibold mb-2">User Not Found</h3><p class="text-gray-600">This user does not exist.</p></div>';
                }
            } catch (error) {
                console.error('Error loading profile:', error);
            }
        });
        
        function updateProfileData(data) {
            // Update profile image
            const profileImg = document.querySelector('img[alt*="profile"]');
            if (profileImg && data.profileImage) {
                profileImg.src = data.profileImage;
            }
            
            // Update links
            const linksContainer = document.getElementById('links-container');
            if (data.links && data.links.length > 0) {
                let linksHTML = '';
                data.links.forEach(link => {
                    linksHTML += `
                        <div 
                            onclick="window.open('${link.link}', '_blank', 'noopener,noreferrer')"
                            class="block bg-custom-green text-white hover:bg-custom-grey-color text-center text-lg font-medium py-4 mb-4 rounded-lg transition cursor-pointer"
                        >
                            ${link.title}
                        </div>
                    `;
                });
                linksContainer.innerHTML = linksHTML;
            } else {
                linksContainer.innerHTML = `
                    <div class="text-center py-12">
                        <div class="w-24 h-24 mx-auto mb-4 text-gray-400">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold mb-2">No Links Yet</h3>
                        <p class="text-gray-600">
                            This user hasn't added any links yet.
                        </p>
                    </div>
                `;
            }
        }
    </script>
    
    <!-- Scripts -->
    <script src="/js/main.js"></script>
</body>
</html>